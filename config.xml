<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.hanze.fellow.finder"
	version 	= "0.0.1">

	<name>Hanze Fellow Finder</name>

	<description>
		Hanze Fellow Finder is ontwikkeld als proof of concept voor het vak Tools tijdens de specialisatie Web & Mobile Services van de studie Communicatiesystemen aan de Hanzehogeschool Groningen.
	</description>

	<author href="http://nielsvaneck.nl"
		email="niels@vaneck.nu">
		Paul Stegeman
		Bert Boersma
		Niels van Eck
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="icon.png" gap:role="default" />

	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>

	<!-- sample preference specification -->
	<!-- <preference name="autorotate" value="false" readonly="true"/> -->
</widget>
