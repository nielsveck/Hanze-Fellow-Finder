<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "nl.hanze.fellowFinder"
	version 	= "0.0.5">

	<name>Hanze Fellow Finder</name>

	<description>
		Hanze Fellow Finder is ontwikkeld als proof of concept voor het vak Tools.
	</description>

	<author href="http://nielsvaneck.nl"
		email="niels@vaneck.nu">
		Niels van Eck
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="icon_72.png" gap:role="default" width="72" height="72" />
   <icon src="icon_48.png" width="48" height="48" />
	<icon src="icon_32.png" width="36" height="36" />

	<gap:splash src="splash_screen.png" />

	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>

	<!-- sample preference specification -->
	<!-- <preference name="autorotate" value="false" readonly="true"/> -->
</widget>